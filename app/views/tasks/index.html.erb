<div class="panel panel-primary">
  <div class="panel-heading"><center><h3><%= current_user.email %> - Task List</h3></center></div> 
</div>

<div class="basic-grey">
  <table>
    <thead>
      <tr>
        <th>Description</th> 
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr style= "background: <%= cycle('white', 'ice') %>">
          <td><%= task.description %></td> 
          <td><%= link_to 'Show', task, class:"btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_task_path(task), class:"btn btn-default" %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Task', new_task_path, class:"btn btn-success" %>
